{
  "rulesDirectory": [
    "tslint-microsoft-contrib",
    "tslint-consistent-codestyle"
  ],
  "extends": [
    "tslint:latest",
    "tslint-immutable"
  ],
  "defaultSeverity": "error",
  "jsRules": {},
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "await-promise": true,
    "promise-function-async": true,
    "promise-must-complete": true,
    "no-floating-promises": true,
    "no-for-in-array": true,
    "prefer-for-of": true,
    "no-unnecessary-else": true,
    "prefer-object-spread": true,
    "prefer-template": true,
    "align": [
      true,
      "parameters",
      "statements",
      "members",
      "elements"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "always"
      }
    ],
    "comment-format": false,
    "no-suspicious-comment": {
      "severity": "warning"
    },
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "no-unused": {
      "options": [
        "unused-function-expression-name",
        "unused-catch-binding"
      ]
    },
    "variable-name": {
      "options": [
        "check-format",
        "allow-leading-underscore"
      ]
    },
    "ban-comma-operator": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "use-isnan": true,
    "insecure-random": true,
    "no-banned-terms": true,
    "no-cookies": true,
    "no-delete-expression": true,
    "no-disable-auto-sanitization": true,
    "no-document-domain": true,
    "no-document-write": true,
    "no-eval": true,
    "no-exec-script": true,
    "function-constructor": true,
    "no-http-string": [
      true,
      "http://www.example.com/?.*",
      "http://www.examples.com/?.*",
      "http://www.w3.org/2000/svg",
      "http://localhost:?.*/?.*"
    ],
    "no-inner-html": true,
    "no-octal-literal": true,
    "non-literal-require": true,
    "possible-timing-attack": true,
    "react-anchor-blank-noopener": true,
    "react-iframe-missing-sandbox": true,
    "react-no-dangerous-html": [true,
      [
        {
          "file": "src/layouts/template.tsx",
          "method": "EnableClientSideJavaScript",
          "comment": "This block is NOT customazible, meaning nothing should be able to inject code into it. It needs to NOT be securely parsed either, as this would prevent it's functionality from kicking in on client's browser."
        },
        {
          "file": "src/components/reports/views.tsx",
          "method": "SankeyInputJSON",
          "comment": "This block is NOT customazible, meaning nothing should be able to inject code into it. It needs to NOT be securely parsed either, as this would parse JSON required by frontend with escaped syntax."
        }
      ]
    ],
    "no-angle-bracket-type-assertion": true,
    "no-return-undefined": true,
    "no-var-keyword": true,
    "no-parameter-reassignment": true,
    "no-let": [
      true,
      "ignore-local"
    ],
    "readonly-array": [
      true,
      "ignore-local"
    ],
    "readonly-keyword": [
      true,
      "ignore-local",
      "ignore-class",
      "ignore-interface"
    ],
    "no-method-signature": true,
    "no-delete": true,
    "no-mixed-interface": false,
    "no-implicit-dependencies": [true, "dev"]
  }
}
